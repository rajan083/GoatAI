<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".DefaultPage"
    android:background="@drawable/background">
    
    <ImageButton
        android:layout_width="120dp"
        android:id="@+id/image"
        android:layout_height="120dp"
        android:src="@drawable/circular_logo"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:background="@color/white" />

    <TextView
        android:id="@+id/id_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_user"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_newChat"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/new_chat"
        android:backgroundTint="@color/Green"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/id_welcome"
        app:cornerRadius="6dp"
        android:layout_marginTop="40dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_previousChat"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/previous_chats"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_newChat"
        android:backgroundTint="@color/white"
        android:textColor="@color/Green"
        />

</RelativeLayout>